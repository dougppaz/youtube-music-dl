{
  "manifest_version": 2,
  "name": "Youtube Music DL",
  "version": "1.1",
  "description": "Youtube Music Downloader. Download music file with tags and cover.",
  "permissions": [
    "background",
    "declarativeContent",
    "activeTab",
    "tabs",
    "downloads",
    "*://music.youtube.com/",
    "*://www.youtube.com/",
    "*://*.googlevideo.com/",
    "*://i.ytimg.com/"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "page_action": {
    "default_title": "Download Current Music - Youtube Music DL",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://music.youtube.com/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}
